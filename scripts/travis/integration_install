#!/bin/sh

# Include functions
_TRAVIS_DIR_=`dirname $0`
_DIR_=`echo $_TRAVIS_DIR_ | sed 's/travis/build/'`
source $_DIR_/functions.sh

# Emulate current system state...
say_info "Creating database from dummy data"
wget https://gist.github.com/toopay/5646031/raw/nw.sql
psql -c 'create database nw;' -U postgres
psql -f nw.sql -U postgres
psql -c '\d' -d nw-copy -U postgres
sed 's/smarty/smarty/' docs/tchalvakSAMPLEresources.php > deploy/resources.php
bash $_DIR_/synchronize.sh postgres