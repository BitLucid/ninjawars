root = true

[*]
end_of_line = lf
insert_final_newline = true

[Makefile]
indent_style = tab
trim_trailing_whitespace = true

[*.{js,py,ts}]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{json,yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.sh]
trim_trailing_whitespace = true
